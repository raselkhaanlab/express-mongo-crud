<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./../includes/head.ejs") -%>
    <style>
        .form-signin {
        width: 100%;
        max-width: 330px;
        padding: 15px;
        margin: 0 auto;
        }
    </style>
</head>
<body style="background-image: linear-gradient(to right top, #051937, #004d7a, #008793, #00bf72, #a8eb12); height: 100vh;">
    <div class="container">
        <div class="text-center">
            <%- include("./../includes/flash.ejs") -%>
            <form class="form-signin" method="POST" action="/auth/login">
                <img class="mb-4" src="/img/login.svg" alt="" width="72" height="72">
                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                <label for="inputEmail" class="sr-only">Email address</label>
                <input name="email" type="email" id="inputEmail" class="form-control mb-2" value="<%= email %>" placeholder="Email address" required="" autofocus="">
                <label for="inputPassword" class="sr-only">Password</label>
                <input  name="password" type="password" id="inputPassword" class="form-control" value="<%= password %>" placeholder="Password" required="">
                <div class="checkbox d-flex justify-content-end">
                  <label class="mt-1">
                    <input  type="checkbox" style="outline: none; border-radius: 2px;" name="remember_me"> Remember me
                  </label>
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
               
                <button type="button" class="btn btn-link text-light" data-toggle="modal" data-target="#forget-password-modal">
                    Forget password?
                </button>
                    <button type="button" class="btn btn-link text-light" data-toggle="modal" data-target="#registration-modal">
                        Don't have a account? register here!
                    </button>
               
                
              </form> 
        </div>
        <%- include('./partials/registration.modal.ejs') -%>
        <%- include('./partials/forget-password.modal.ejs') %>
        <%- include("./partials/enter-registration-email.modal.ejs") %>
        <%- include('./../includes/footer.ejs') -%>
    </div>
    
    <%- include('./../includes/footerJs.ejs') -%>
    <script src="/js/home.js"></script>
</body>
</html>